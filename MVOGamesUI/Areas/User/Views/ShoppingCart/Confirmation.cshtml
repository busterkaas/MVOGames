@model MVOGamesUI.Areas.User.ViewModels.UserCart
<ol class="progress-tracker">
    <li class="step done"><span class="step-name">Shopping Cart</span></li>
    <li class="step active"><span class="step-name">Confirmation</span></li>
    <li class="step"><span class="step-name">Payment</span></li>
    <li class="step"><span class="step-name">Checkout</span></li>
</ol>
<div class="container itemContainer">

    <h2 class="detailsHeader">Confirmation</h2>
    <br />


    <div class="col col-lg-6 col-md-6 col-sm-6">

        @{
            Html.RenderPartial("_Userinformation", Model.User);
        }
    </div>

    <div class="col col-lg-6 col-md-6 col-sm-6 ">
        <h4>Games:</h4>
        @{
            decimal i = 0;
            <table class="table-condensed" style="width:400px;">
                <thead style="border-bottom:solid">
                    <tr>
                        <td>
                            <strong>Title</strong>

                        </td>
                        <td>
                            <strong> Quantity</strong>
                        </td>
                        <td>
                            <strong>Price</strong>
                        </td>
                        <td></td>
                    </tr>
                </thead>
                @foreach (var item in Model.cartModel.Items)
            {
                    <tr style="border-bottom:groove">
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @{decimal u = @item.UnitPrice * @item.Quantity;}
                            @u
                        </td>

                        @{i = i + @item.UnitPrice * @item.Quantity;
                        }
                    </tr>
                            }
            </table>
            <br />
            <p><strong>Total Price: @i DKK</strong> </p>
        }
    </div>
    <a class="btn btnGenerel "href="@Url.Action("Payment")">Go To Payment</a>
</div>

