@model ServiceGateway.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container itemContainer form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="myEditorForLengthEdit form-group">
            @Html.Label("Order id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="myEditorForLengthEdit form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="myEditorForLengthEdit form-group">
            @Html.Label("Movie(s)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @foreach (var orderlines in Model.Orderlines)
                {
                    @Html.Label(orderlines.PlatformGame.Game.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Label(orderlines.PlatformGame.Price.ToString(), new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Orderlines, "", new { @class = "text-danger" })
                    <br />
                }
            </div>
        </div>

        <div class="myEditorForLengthEdit form-group">
            @Html.Label("Total price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @foreach (var orderlines in Model.Orderlines)
                {
                }
            </div>
        </div>



        <div class="myEditorForLengthEdit form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
