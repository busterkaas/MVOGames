@model System.Collections.Generic.IEnumerable<DTOModels.Models.PlatformDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Platforms</h2>
<button class="btn btn-success" onclick="window.location.href = '@Url.Action("Create", "Platforms")'">Create Platform</button>
<br />
<br/>
<div class="container itemContainer">
    <table class="table table-condensed table-hover">
        <thead class="col-lg-12 ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody class="col-lg-12">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td align="right">
                        <button class="btn btn-warning" onclick="window.location.href = '/Admin/Platforms/Edit/@item.Id'">Edit</button>
                        <button class="btn btn-danger" onclick="window.location.href = '/Admin/Platforms/Delete/@item.Id'">Delete</button>
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>


