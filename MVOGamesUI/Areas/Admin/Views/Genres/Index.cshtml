@model IEnumerable<DTOModels.Models.GenreDTO>


@{
    ViewBag.Title = "Index";
}

<h2><strong>Genres</strong></h2>

<hr />
<div class="container itemContainer">
    <br />
    <button class="btn btn-success" onclick="window.location.href = '@Url.Action("Create", "Genres")'">Create Genres</button>
    <br />
    <br />
    <table class="table table-condensed table-hover">
        <thead class="col-lg-12 ">
            <tr class="tablehederColor">
                <th style="border-bottom: none">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="col-lg-12">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td class="col-md-12" align="right">
                        <button class="btn btn-warning" onclick="window.location.href = '/Admin/Genres/Edit/@item.Id'">Edit</button>
                        <button class="btn btn-danger" onclick="window.location.href = '/Admin/Genres/Delete/@item.Id'">Delete</button>
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>



